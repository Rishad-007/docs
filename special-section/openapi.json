{
  "openapi": "3.1.0",
  "info": {
    "title": "University Convocations API",
    "description": "How to add this api I dont know. but i have started it with some help",
    "license": {
      "name": "Mithium"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://jsonplaceholder.typicode.com"
    }
  ],
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "paths": {
    "/posts/{id}": {
      "get": {
        "description": "Get a post by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of the post to retrieve",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64",
              "example": 1
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Post"
                },
                "example": {
                  "userId": 1,
                  "id": 1,
                  "title": "sunt aut facere repellat provident occaecati excepturi optio reprehenderit",
                  "body": "quia et suscipit\nsuscipit recusandae consequuntur expedita et cum\nreprehenderit molestiae ut ut quas totam\nnostrum rerum est autem sunt rem eveniet architecto"
                }
              }
            }
          },
          "404": {
            "description": "Post not found"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Post": {
        "type": "object",
        "properties": {
          "userId": {
            "type": "integer",
            "description": "ID of the user who created the post",
            "example": 2
          },
          "id": {
            "type": "integer",
            "description": "Unique identifier for the post",
            "example": 3
          },
          "title": {
            "type": "string",
            "description": "Title of the post",
            "example": "sunt aut facere repellat provident occaecati excepturi optio reprehenderit"
          },
          "body": {
            "type": "string",
            "description": "Content of the post",
            "example": "quia et suscipit\nsuscipit recusandae consequuntur expedita et cum\nreprehenderit molestiae ut ut quas totam\nnostrum rerum est autem sunt rem eveniet architecto"
          }
        },
        "required": ["userId", "id", "title", "body"]
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  }
}
